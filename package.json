{
   "scripts": {
      "clean": "rm -rf public/dist server/dist shared/dist",
      "prebuild": "pnpm run clean && mkdir -p public/dist server/dist shared/dist",
      "build:public": "esbuild public/*.ts --bundle --outdir=public/dist --sourcemap --minify",
      "build:server": "esbuild server/*.ts --bundle --platform=node --outdir=server/dist --sourcemap --minify",
      "build:shared": "esbuild shared/*.ts --bundle --platform=node --outdir=shared/dist --sourcemap --minify",
      "build": "pnpm run build:public && pnpm run build:server && pnpm run build:shared",
      "build:public:watch": "esbuild public/*.ts --bundle --outdir=public/dist --sourcemap --minify --watch",
      "build:server:watch": "esbuild server/*.ts --bundle --platform=node --outdir=server/dist --sourcemap --minify --watch",
      "build:shared:watch": "esbuild shared/*.ts --bundle --platform=node --outdir=shared/dist --sourcemap --minify --watch",
      "build:watch": "concurrently -n public,server,shared \"pnpm run build:public:watch\" \"pnpm run build:server:watch\" \"pnpm run build:shared:watch\"",
      "start:server": "nodemon --watch server/dist --watch public/dist --watch shared/dist --exec 'clear && node --no-deprecation' server/dist/server.js",
      "dev": "concurrently --raw -n build,server \"pnpm run build:watch\" \"pnpm run start:server\"",
      "start": "node --no-deprecation server/dist/server.js",
      "host": "tailscale funnel 3000 & pnpm run start"
   },
   "dependencies": {
      "concurrently": "^9.2.1",
      "esbuild": "^0.25.10",
      "express": "^5.1.0",
      "socket.io": "^4.8.1",
      "socket.io-client": "^4.8.1",
      "pixi.js": "^8.14.3"
   },
   "devDependencies": {
      "@types/express": "^5.0.3",
      "@types/node": "^24.7.1",
      "nodemon": "^3.1.9",
      "typescript": "^5.7.3",
      "eslint": "^9.39.1",
      "prettier": "^3.7.4"
   }
}