{
   "scripts": {
      "clean": "rm -rf public/dist server/dist shared/dist",
      "prebuild": "npm run clean && mkdir -p public/dist server/dist shared/dist",
      "build:public": "esbuild public/*.ts --bundle --outdir=public/dist --sourcemap --minify",
      "build:server": "esbuild server/*.ts --bundle --platform=node --outdir=server/dist --sourcemap --minify",
      "build:shared": "esbuild shared/*.ts --bundle --platform=node --outdir=shared/dist --sourcemap --minify",
      "build": "npm run build:public && npm run build:server && npm run build:shared",
      "build:public:watch": "esbuild public/*.ts --bundle --outdir=public/dist --sourcemap --watch",
      "build:server:watch": "esbuild server/*.ts --bundle --platform=node --outdir=server/dist --sourcemap --watch",
      "build:shared:watch": "esbuild shared/*.ts --bundle --platform=node --outdir=shared/dist --sourcemap --watch",
      "build:watch": "concurrently \"npm run build:public:watch\" \"npm run build:server:watch\" \"npm run build:shared:watch\"",
      "start:server": "nodemon --watch server --exec \"node server/dist/server.js\"",
      "dev": "concurrently \"npm run build:watch\" \"npm run start:server\"",
      "start": "node server/dist/server.js"
   },
   "dependencies": {
      "concurrently": "^9.2.1",
      "esbuild": "^0.25.10",
      "express": "^5.1.0",
      "socket.io": "^4.8.1",
      "socket.io-client": "^4.8.1"
   },
   "devDependencies": {
      "@types/express": "^5.0.3",
      "@types/node": "^24.7.1",
      "nodemon": "^3.1.9",
      "typescript": "^5.7.3"
   }
}
