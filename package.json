{
   "scripts": {
      "clean": "rm -rf public/dist server/dist shared/dist",
      "prebuild": "pnpm run clean && mkdir -p public/dist server/dist shared/dist",
      "dev:client": "cross-env NODE_ENV=development vite",
      "dev:client:host": "cross-env NODE_ENV=development vite --host",
      "dev:server": "cross-env NODE_ENV=development concurrently \"pnpm run build:server:watch\" \"pnpm run start:server\"",
      "dev": "concurrently --raw -n build,server \"pnpm run dev:client\" \"pnpm run dev:server\"",
      "dev:host": "concurrently --raw -n build,server \"pnpm run dev:client:host\" \"pnpm run dev:server\"",
      "build": "pnpm run build:client && pnpm run build:server",
      "build:client": "vite build",
      "build:server": "pnpm run build:shared && tsc --build server/tsconfig.json",
      "build:shared": "tsc --build shared/tsconfig.json",
      "build:server:watch": "esbuild server/*.ts --bundle --platform=node --outdir=server/dist --sourcemap --minify --watch",
      "build:shared:watch": "esbuild shared/*.ts --bundle --platform=node --outdir=shared/dist --sourcemap --minify --watch",
      "start:server": "nodemon --watch server/dist --watch shared/dist --exec 'clear && node --no-deprecation' server/dist/server.js",
      "start": "node --no-deprecation server/dist/server.js",
      "host": "tailscale funnel 3000 & pnpm run start",
      "lint": "eslint .",
      "lint:fix": "eslint . --fix"
   },
   "dependencies": {
      "concurrently": "^9.2.1",
      "esbuild": "^0.25.10",
      "express": "^5.1.0",
      "pixi-filters": "^6.1.5",
      "pixi-viewport": "^6.0.3",
      "pixi.js": "^8.14.3",
      "socket.io": "^4.8.1",
      "socket.io-client": "^4.8.1"
   },
   "devDependencies": {
      "@eslint/js": "^9.39.2",
      "@types/express": "^5.0.3",
      "@types/node": "^24.7.1",
      "cross-env": "^10.1.0",
      "eslint": "^9.39.1",
      "nodemon": "^3.1.9",
      "prettier": "^3.7.4",
      "ts-node-dev": "^2.0.0",
      "typescript": "^5.9.3",
      "typescript-eslint": "^8.50.0",
      "vite": "^7.3.0",
      "vite-tsconfig-paths": "^6.0.2"
   }
}